<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User list</title>
    <!-- CSS only -->
    <link rel="stylesheet" href="CSS/user-list-page.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <!-- search section -->
<div class="search-box mb-3">
    <h1 class="super-user-greeting" id="superUserGreeting">WELCOME SUPER U</h1>
 <!--table section  -->
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">User Name</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
            <% userData.forEach(user => { %>
                <tr>
                    <th scope="row"><%= user.id %> </th>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><a href="/user-details-page/<%= user.id %> " >Details</a></td>
                </tr>
            <% }) %>
        <tr>
            <th></th>
            <td></td>
            <td></td>
            <td><a class="btn btn-warning" href="/user-add-page" role="button">Add New User</a></td>
        </tr>
        </tbody>
    </table>   
</div>  
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<script src="/JS/script-fe.js"></script>
</body>
</html>